<% layout("/layouts/boilerplate.ejs") %>

    <div class="row mt-3">
        <div class="col-8 offset-3 ps-0">
            <h3>
                <%= listing.title %>
            </h3>
        </div>
        <div class="card col-6 offset-3 show-card">
            <img src=<%=listing.image %> class="card-img-top show-img" alt="Listing image">
            <div class="card-body">
                <p class="mb-2">
                    <%= listing.description %>
                </p>
                <p class="mb-0">
                    &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                </p>
                <p class="mb-0">
                    <%= listing.location %>
                </p>
                <p class="mb-0">
                    <%= listing.country %>
                </p>
            </div>
            <div class="btns mt-3">
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-light px-5  edit-btn">Edit</a>
                <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
                    <button class="btn btn-danger ms-2">Delete</button>
                </form>
            </div>
        </div>

        <div class="col-8 offset-3 mb-3">
            <hr>
            <h4>Leave a Review</h4>
            <form action="/listings/<%= listing.id %>/reviews" method="POST">
                <div class="my-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" name="review[rating]" id="rating" min="1" max="5" class="form-range">
                </div>

                <div class="my-3">
                    <label for="comment" class="form-label">Comments</label>
                    <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"></textarea>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
            </form>
        </div>
    </div>