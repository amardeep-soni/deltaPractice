<% layout("/layouts/boilerplate.ejs") %>

  <div class="row">
    <div class="col-8 offset-2 mb-3 mt-1">
      <h3>Edit Your Listing</h3>

      <form action="/listings/<%= listing._id %>?_method=PUT" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="inputTitle" class="form-label">Title</label>
          <input type="text" class="form-control" id="inputTitle" placeholder="Enter a catchy title"
            name="listing[title]" value="<%= listing.title %>" required>
          <div class="invalid-feedback">Title should be valid</div>
        </div>
        <div class="mb-3">
          <label for="inputDescription" class="form-label">Description</label>
          <textarea class="form-control" id="inputDescription" placeholder="Write something here..."
            name="listing[description]" required><%= listing.description  %></textarea>
          <div class="invalid-feedback">Description should be valid</div>
        </div>
        <div class="mb-3">
          <label for="inputImage" class="form-label">Image</label>
          <input type="text" class="form-control" id="inputImage" placeholder="Enter image Url" name="listing[image]"
            value="<%= listing.image %>">
          <div class="valid-feedback">When image is not provided we use default image</div>
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="inputPrice" class="form-label">Price</label>
            <input type="number" class="form-control" id="inputPrice" placeholder="1200" name="listing[price]"
              value="<%= listing.price %>" required>
            <div class="invalid-feedback">price should be valid</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="inputLocation" class="form-label">Location</label>
            <input type="text" class="form-control" id="inputLocation" placeholder="India" name="listing[location]"
              value="<%= listing.location %>" required>
          </div>
        </div>
        <div class="mb-3">
          <label for="inputCountry" class="form-label">Country</label>
          <input type="text" class="form-control" id="inputCountry" placeholder="Jaipur, Rajasthan"
            name="listing[country]" value="<%= listing.country %>" required>
          <div class="invalid-feedback">Location should be valid</div>
        </div>
        <button type="submit" class="btn btn-light add-btn">Edit</button>
      </form>
    </div>
  </div>